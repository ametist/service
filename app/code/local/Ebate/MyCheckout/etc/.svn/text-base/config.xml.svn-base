<?xml version="1.0"?>
    <config>
        <modules>
            <SD_SDCheckout>
                <version>0.1.0</version>
            </SD_SDCheckout>
        </modules>
        <frontend>
            <routers>
                <checkout>
                    <args>
                        <modules>
                            <SD_SDCheckout before="Mage_Checkout">SD_SDCheckout</SD_SDCheckout>
                        </modules>
                    </args>
                </checkout>
                <sdc>
                    <use>standard</use>
                    <args>
                        <module>SD_SDCheckout</module>
                        <frontName>sdc</frontName>
                    </args>
                </sdc>
            </routers>
            <layout>
                <updates>
                    <checkout>
                        <file>sdc.xml</file>
                    </checkout>
                </updates>
            </layout>
        </frontend>
        <admin>
            <routers>
                <sdc>
                    <use>admin</use>
                    <args>
                        <module>SD_SDCheckout</module>
                        <frontName>sdc</frontName>
                    </args>
                </sdc>
            </routers>
        </admin>
        <adminhtml>
            <acl>
                <resources>
                    <all>
                        <title>Allow Everything</title>
                    </all>
                    <admin>
                        <children>
                            <sdc>
                                <title>SD Checkout Module</title>
                                <sort_order>200</sort_order>
                            </sdc>
                        </children>
                    </admin>
                </resources>
            </acl>
            <layout>
                <updates>
                    <sdc>
                        <file>sdc.xml</file>
                    </sdc>
                </updates>
            </layout>
        </adminhtml>
        <global>
            <rewrite>
                <sd_sdc_checkout_cart>
                    <from><![CDATA[#^/checkout/cart/#]]></from>
                    <to><![CDATA[sdc/checkout_cart/$1]]></to>
                </sd_sdc_checkout_cart>
            </rewrite>
            <rewrite>
                <sd_sdc_checkout_onepage>
                    <from><![CDATA[#^/checkout/onepage/#]]></from>
                    <to><![CDATA[sdc/checkout_onepage/$1]]></to>
                </sd_sdc_checkout_onepage>
            </rewrite>
            <models>
                <checkout>
                    <rewrite>
                        <type_onepage>SD_SDCheckout_Model_Onepage</type_onepage>
                    </rewrite>
                </checkout>
                <sdc>
                    <class>SD_SDCheckout_Model</class>
                    <resourceModel>sdc_mysql4</resourceModel>
                </sdc>
            </models>
            <resources>
                <sdc_setup>
                    <setup>
                        <module>SD_SDCheckout</module>
                    </setup>
                    <connection>
                        <use>core_setup</use>
                    </connection>
                </sdc_setup>
                <sdc_write>
                    <connection>
                        <use>core_write</use>
                    </connection>
                </sdc_write>
                <sdc_read>
                    <connection>
                        <use>core_read</use>
                    </connection>
                </sdc_read>
            </resources>
            <blocks>
                <sdc>
                    <class>SD_SDCheckout_Block</class>
                </sdc>
                <checkout>
                    <rewrite>
                        <cart>SD_SDCheckout_Block_Cart</cart>
                        <onepage_payment_methods>SD_SDCheckout_Block_Methods</onepage_payment_methods>
                    </rewrite>
                </checkout>
            </blocks>
            <helpers>
                <sdc>
                    <class>SD_SDCheckout_Helper</class>
                </sdc>
                <sdc_switcher>
                    <class>SD_SDCheckout_Helper_PaymentSwitcher</class>
                </sdc_switcher>
            </helpers>
        </global>
    </config>